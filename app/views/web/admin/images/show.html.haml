- model_class = Image
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @image.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @image.description
%p
  %strong= model_class.human_attribute_name(:tags) + ':'
  %br
  = @image.tags
%p
  %strong= model_class.human_attribute_name(:user_agent) + ':'
  %br
  = @image.user_agent
%p
  %strong= model_class.human_attribute_name(:ip) + ':'
  %br
  = @image.ip
- if @image.file?
  %p
    = image_tag @image.file, class: 'controls', title: @image.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_images_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_image_path(@image), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_image_path(@image), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
